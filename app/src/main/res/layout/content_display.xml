<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kev.kevmusic.Display"
    tools:showIn="@layout/activity_display"
    android:background="@drawable/the_best">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/trackName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="All Black Everything"
        android:textSize="22sp"
        android:padding="3dp"
        android:paddingLeft="20dp"
        android:textColor="#efefef"/>

    <TextView
        android:id="@+id/artistlabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="All Black Everything"
        android:textSize="14sp"
        android:padding="3dp"
        android:paddingLeft="20dp"
        android:textColor="#efefef"/>

    <Button
        android:id="@+id/back"
        android:textColor="#e4e4e4"
        android:background="#B52B2B2B"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:text="Back To List"
        android:fontFamily="sans-serif-medium"/>

</LinearLayout>
